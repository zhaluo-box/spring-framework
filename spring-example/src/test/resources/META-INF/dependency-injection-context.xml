<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="bean-definition-context.xml"/>

	<!-- xml setter 注入	-->
	<bean id="userHolder" class="com.framework.example.common.entity.UserHolder" primary="true">
		<property name="user" ref="superUser"/>
	</bean>

	<bean id="userHolder2" class="com.framework.example.common.entity.UserHolder">
		<constructor-arg ref="example-user"/>
	</bean>

	<!-- xml 构造器注入	-->
	<bean id="userHolder3" class="com.framework.example.common.entity.UserHolder" autowire="constructor"/>

</beans>
